          "        ",
          "    //        print(\"get inter\\n\");",
          "            var eline = valiter.get_key();",
          "            if (eline > tlines) {",
          "                continue;",
          "            }",
          "            this.el.get_iter_at_line( out iter, eline);",
          "            //print(\"mark line\\n\");",
